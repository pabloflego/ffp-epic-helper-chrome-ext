{
    "manifest_version": 2,

    "name": "FFP - Epic! Helper",
    "description": "Funcionalidades adicionales para Epic!",
    "version": "1.1.1",

    "icons": {
        "16": "css/img/icon16.png",
        "48": "css/img/icon48.png",
        "128": "css/img/icon128.png"
    },

    "browser_action": {
        "default_icon": "css/img/icon48.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "js": [
                "js/jquery-2.1.1.min.js",
                "js/app.js"
            ],
            "css": ["css/ffp-page.css"],
            "matches": [ "http://siglo21.epic-sam.net/*", "https://siglo21.epic-sam.net/*"]
        }
    ]
}